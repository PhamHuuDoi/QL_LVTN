extends ../../layouts/default.pug

block main
  .container.mt-4
    h2.text-primary Danh sách đánh giá giữa kỳ

    table.table.table-bordered.table-hover
      thead.thead-dark
        tr
          th MSSV
          th Họ tên
          th Lớp
          th Nhóm
          th Đề tài
          th Giảng viên đánh giá
          th Điểm GK
          th Kết quả
          th Xem

      tbody
        each dg in danhgias
          tr
            td= dg.sv_id ? dg.sv_id.msvv : "—"
            td= dg.sv_id ? dg.sv_id.ten : "—"
            td= dg.sv_id ? dg.sv_id.lop : "—"
            td= dg.sv_id && dg.sv_id.group ? dg.sv_id.group : "—"

            td= dg.detai_id ? dg.detai_id.ten : "Chưa có"
            td= dg.giangvien_id ? dg.giangvien_id.hoten : "—"
            td 
              if dg.diem != null
                | #{dg.diem} %
              else 
                span.text-muted Chưa đánh giá

            td= dg.ketqua

            td
              a.btn.btn-sm.btn-info(href=`/admin/danhgiagk/detail/${dg._id}`) Xem
